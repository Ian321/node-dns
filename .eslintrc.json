{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true
  },
  "root": true,
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "arrow-parens": ["error", "as-needed"],
    "require-jsdoc": "off",
    "no-underscore-dangle": "off",
    "no-invalid-this": "off",
    "max-len": [1, 150],
    "indent": ["error", 2, {
      "SwitchCase": 1,
      "MemberExpression": 0
    }],
    "no-console": "off"
  }
}
